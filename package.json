{
	"name": "dw-cloudflare-remix-starter",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "bun run format && remix vite:build",
		"deploy": "bun run build && bun wrangler pages deploy build/client --commit-dirty=true",
		"dev": "bun run format && remix vite:build && wrangler pages dev ./build/client",
		"format": "biome format --write --javascript-formatter-enabled=true ./",
		"lint": "biome lint --apply ./",
		"start": "wrangler pages dev ./build/client",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"preview": "npm run build && wrangler pages dev",
		"cf-typegen": "wrangler types",
		"postinstall": "prisma generate --no-engine"
	},
	"prisma": {
		"seed": "tsx prisma/seed/seed-roles.ts"
	},
	"dependencies": {
		"@prisma/client": "^5.14.0",
		"@prisma/extension-accelerate": "^1.0.0",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-select": "^2.0.0",
		"@radix-ui/react-slot": "^1.0.2",
		"@remix-run/cloudflare": "^2.9.2",
		"@remix-run/cloudflare-pages": "^2.9.2",
		"@remix-run/react": "^2.9.2",
		"@tanstack/react-query": "^5.38.0",
		"@types/bcryptjs": "^2.4.6",
		"bcryptjs": "^2.4.3",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"hono": "^4.4.0",
		"isbot": "^5.1.7",
		"miniflare": "^3.20240404.0",
		"nanoid": "^5.0.7",
		"prisma": "^5.14.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.2.1",
		"remix-auth": "^3.6.0",
		"remix-auth-form": "^1.5.0",
		"remix-hono": "^0.0.16",
		"shadcn-ui": "^0.8.0",
		"tailwind-merge": "^2.3.0",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"@cloudflare/workers-types": "^4.20240512.0",
		"@hono/eslint-config": "^0.0.6",
		"@hono/node-server": "^1.11.1",
		"@hono/vite-cloudflare-pages": "^0.4.0",
		"@hono/vite-dev-server": "^0.12.1",
		"@remix-run/dev": "^2.9.2",
		"@types/node": "^20.12.12",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"autoprefixer": "^10.4.19",
		"node-fetch": "^3.3.2",
		"postcss": "^8.4.38",
		"tailwindcss": "^3.4.3",
		"tsx": "^4.11.0",
		"typescript": "^5.4.5",
		"vite": "^5.1.0",
		"vite-tsconfig-paths": "^4.2.1",
		"wrangler": "^3.48.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
